{
    "layer": "top", // Waybar at top layer
    "modules-left": ["hyprland/workspaces"],
    "modules-right": ["mpris","tray", "cpu", "temperature", "memory", "backlight/slider","bluetooth", "network", "pulseaudio", "battery","power-profiles-daemon", "clock"],
    
    "hyprland/workspaces": {
     "format": "{icon}",
     
},
    "tray": {
        // "icon-size": 21,
        "spacing": 10
    },
    "clock": {
    	"interval": 4,
        "tooltip-format": "{:%d-%m-%Y | %H:%M}",
        "format-alt": "{:%a, %d. %b  %H:%M}",
        "on-click": "wlogout"
    },
    "cpu": {
    	"interval": 2,
        "format": "　{usage}% {max_frequency}GHz"
    },
    "memory": {
    	"interval": 4,
        "format": " {used}GB/{total}GB",
        "tooltip-format": "Remaining: {avail}GB"
    },
    "backlight": {
        //"device": "intel_backlight",
        "smooth-scrolling-threshold":2.0,
        "format": "　{percent}%",
        "interval": 10,
        "format-icons": ["", ""]
    },
    "battery": {
    	"interval": 4,
        "states": {
           "good": 95,
            "warning": 30,
            "critical": 15
        },
        "format": "{icon} {capacity}%",
        // "format-good": "", // An empty format will hide the module
        // "format-full": "",
        "format-icons": ["", "", "", "", ""],
        "tooltip":true
    },
    "network": {
    "interval": 4,
        // "interface": "wlp2s0", // (Optional) To force the use of this interface
        "format-wifi": " {signalStrength}%",
        "format-ethernet": "{ifname}: {ipaddr}/{cidr} ETH",
        "format-disconnected": "⚠"
    },
    
    "mpris": {
    	"interval": 1,
	"format": "{player_icon} {dynamic}",
	"format-paused": "{status_icon} <i>{dynamic}</i>",
	 "format-stopped": "{player_icon}",
	"player-icons": {
		"default": "▶",
		"mpv": "🎵"
	},
	"status-icons": {
		"paused": "⏸",
            "playing": ""
	},
	"ignored-players": ["firefox"],
	        "on-click": "playerctl play-pause",
        "on-scroll-up": "playerctl next",
        "on-scroll-down": "playerctl previous"
},
    
    "pulseaudio": {
        //"scroll-step": 1,
        "smooth-scrolling-threshold":2.0,
        "format": "　{volume}%",
        "format-bluetooth": "{volume}% {icon}",
        "format-muted": "",
        "format-icons": {
            "headphones": "",
            "handsfree": "",
            "headset": "",
            "phone": "",
            "portable": "",
            "car": "",
            "default": ["", ""]
        },
        "on-click": "pavucontrol"
    },
    "temperature": {
          "interval": 4,
          "critical-threshold": 60,
          "format": "{temperatureC}°C ",
          "format-critical": "{temperatureC}°C "
    },
"power-profiles-daemon": {
  "format": "{icon}",
  "tooltip-format": "Power profile: {profile}\nDriver: {driver}",
  "tooltip": true,
  "format-icons": {
    "default": "",
    "performance": "",
    "balanced": "",
    "power-saver": ""
  }
},
"bluetooth": {
"interval": 4,
	"format": "  {status}",
	"format-connected": "  {device_alias}",
	"format-connected-battery": " {device_alias} {device_battery_percentage}%",
	// "format-device-preference": [ "device1", "device2" ], // preference list deciding the displayed device
	"tooltip-format": "{controller_alias}\t{controller_address}\n\n{num_connections} connected",
	"tooltip-format-connected": "{controller_alias}\t{controller_address}\n\n{num_connections} connected\n\n{device_enumerate}",
	"tooltip-format-enumerate-connected": "{device_alias}\t{device_address}",
	"tooltip-format-enumerate-connected-battery": "{device_alias}\t{device_address}\t{device_battery_percentage}%"
},
          	
}
